{{#extends "base"}}
    {{#block "content"}}
        <h1> CICO form </h1>
        <h2> Logged Food </h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Food Name</th>
                    <th>Calories</th>
                    <th>Meal</th>
                    <th>Tags</th>
                </tr>
            </thead>
            {{#each foodRecords}}
                <tr>
                    <td> {{this.id}} </td>
                    <td> {{this.foodName}} </td>
                    <td> {{this.calories}} </td>
                    <td> {{this.meal}} </td>
                    <td> {{this.tags}} </td>
                </tr>
            {{/each}}
        </table>
    {{/block}}
{{/extends}}